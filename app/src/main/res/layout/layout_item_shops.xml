<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    android:layout_marginTop="16dp">

    <LinearLayout
        android:id="@+id/layout_item_shops_front"
        android:layout_width="156dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/rect_outline"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_item_shops"
            android:layout_width="match_parent"
            android:layout_height="192dp"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingTop="7dp"
            android:paddingEnd="10dp"
            android:paddingBottom="7dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_name_item_shops"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxWidth="200dp"
                    android:singleLine="true"
                    android:textColor="@color/color_shops_name"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:text="스타벅스" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_subname_item_shops"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:maxWidth="200dp"
                    android:singleLine="true"
                    android:textColor="@color/color_shops_sub_name"
                    android:textSize="13sp"
                    tools:text="연대 백양로점" />

                <TextView
                    android:id="@+id/txt_distance_item_shops"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="right"
                    android:maxWidth="200dp"
                    android:singleLine="true"
                    android:textColor="@color/color_shops_sub_name"
                    android:textSize="13sp"
                    tools:text="20m" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_item_shops_back"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/rect_outline"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/txt_subtitle_back_item_shops"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:maxWidth="200dp"
            android:singleLine="true"
            tools:text="SUBTOTLE" />
    </LinearLayout>


</LinearLayout>