<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_app_theme"
    tools:ignore="ExtraText">

    <FrameLayout
        android:id="@+id/layout_main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/layout_main_tab" />

    <RelativeLayout
        android:id="@+id/layout_main_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <ImageView
            android:id="@+id/img_line_main_tab"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_toolbar_line" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_line_main_tab">

            <ImageView
                android:id="@+id/img_stampyou_main_tab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_toStartOf="@+id/img_home_main_tab"
                android:background="@drawable/selector_stamp_you_btn" />

            <ImageView
                android:id="@+id/img_home_main_tab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/selector_home_btn" />

            <ImageView
                android:id="@+id/img_stampme_main_tab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@+id/img_home_main_tab"
                android:background="@drawable/selector_stamp_me_btn" />
        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>
